version: '3'
services:
    db:
        image: mysql
        restart: always
        container_name: db_c
        environment:
          - MYSQL_ROOT_PASSWORD=
        ports:
          - "3306:3306"
    web:
        build: .
        container_name: web_c
        command: uwsgi --http 0.0.0.0:8080 --module myweb.wsgi
        volumes:
          - .:/code
        expose:
          - "8080"
        depends_on:
          - db
    ngx:
        image: nginx:latest
        restart: always
        container_name: ngx_c
        ports:
          - "80:80"
          - "443:443"
        volumes:
          - .:/code
          - ./nginx:/etc/nginx/conf.d
        depends_on:
          - web
